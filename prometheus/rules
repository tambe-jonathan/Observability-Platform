groups:
  - name: performance_optimization
    rules:
      # Recording Rule: Pre-calculating CPU usage to speed up dashboards
      - record: job:node_cpu_seconds:avg_idle
        expr: avg without(cpu) (rate(node_cpu_seconds_total{mode="idle"}[5m]))

  - name: infrastructure_alerts
    rules:
      # Alert Rule: High CPU Usage
      - alert: HostHighCpuLoad
        expr: 100 - (avg by(instance) (rate(node_cpu_seconds_total{mode="idle"}[2m])) * 100) > 80
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "High CPU load on {{ $labels.instance }}"
          description: "CPU load is > 80% for more than 5 minutes."

      # Alert Rule: Instance Down
      - alert: InstanceDown
        expr: up == 0
        for: 1m
        labels:
          severity: critical
        annotations:
          summary: "Instance {{ $labels.instance }} is down"
          description: "Target has been unreachable for more than 1 minute."
